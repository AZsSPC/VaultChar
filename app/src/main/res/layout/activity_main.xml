<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gb0"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/char_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@color/gb1"
        android:hint="@string/hint_data_str"
        android:inputType="text"
        android:maxLength="8"
        android:padding="8dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/gb1"
        android:gravity="center_horizontal|top"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_parse3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="generateRandom"
            app:backgroundTint="@color/minus"
            app:elevation="4dp"
            app:fabSize="normal"
            app:maxImageSize="32dp"
            app:srcCompat="@drawable/refres" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="generateRandom"
            app:backgroundTint="@color/colorAccent"
            app:elevation="4dp"
            app:fabSize="normal"
            app:maxImageSize="32dp"
            app:srcCompat="@drawable/save" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="generateRandom"
            app:backgroundTint="@color/colorAccent"
            app:elevation="4dp"
            app:fabSize="normal"
            app:maxImageSize="32dp"
            app:srcCompat="@drawable/select" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:onClick="generateRandom"
            app:backgroundTint="@color/normal"
            app:elevation="4dp"
            app:fabSize="normal"
            app:maxImageSize="32dp"
            app:srcCompat="@drawable/apply" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/char_code">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/prop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>